<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.whiz.quiz.quizwhiz" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activity.Main"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.Home"
            android:label="@string/title_activity_home" >
        </activity>
        <activity
            android:name=".activity.MakeQuestions"
            android:label="@string/title_activity_make_quiz" >
        </activity>
        <activity
            android:name=".activity.Registration"
            android:label="@string/title_activity_registration" >
        </activity>

        <activity
            android:name=".activity.WaitQuiz"
            android:label="Wait Quiz">
        </activity>

        <activity
            android:name=".activity.InputQuestion"
            android:label="@string/title_activity_input_question" >
        </activity>
        <activity
            android:name=".activity.MakeQuiz"
            android:label="@string/title_activity_make_quiz" >
        </activity>
        <activity
            android:name=".activity.TakeQuiz"
            android:label="Take Quiz">
        </activity>
    </application>

</manifest>
