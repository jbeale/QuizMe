<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:theme="@style/Base.Theme.AppCompat.Light"
    tools:context="com.whiz.quiz.quizwhiz.activity.Home">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Make Questions"
        android:id="@+id/buttonMakeQuestions"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Join Session"
        android:id="@+id/buttonJoinSession"
        android:layout_above="@+id/listView"
        android:layout_toRightOf="@+id/buttonCreateSession"
        android:layout_toEndOf="@+id/buttonCreateSession"
        android:textSize="12dp" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:layout_below="@+id/buttonMakeQuestions"
        android:layout_toEndOf="@+id/buttonMakeQuestions"
        android:layout_marginTop="73dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="My Grades"
        android:id="@+id/textGrades"
        android:layout_below="@+id/buttonJoinSession"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Session"
        android:id="@+id/buttonCreateSession"
        android:layout_alignBottom="@+id/buttonMakeQuestions"
        android:layout_toRightOf="@+id/buttonMakeQuestions"
        android:layout_toEndOf="@+id/buttonMakeQuestions" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Make Quiz"
        android:id="@+id/buttonMakeQuiz"
        android:layout_below="@+id/buttonMakeQuestions"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
